# RuchiServ Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ========== CASHFREE PAYMENT GATEWAY ==========
# Get credentials from: https://merchant.cashfree.com/
CASHFREE_APP_ID=your_app_id_here
CASHFREE_SECRET_KEY=your_secret_key_here
CASHFREE_SANDBOX=true

# ========== 2FACTOR OTP SERVICE ==========
# Get API key from: https://2factor.in/
TWOFACTOR_API_KEY=your_api_key_here

# ========== SENDGRID (OPTIONAL) ==========
# Get API key from: https://sendgrid.com/
SENDGRID_API_KEY=your_sendgrid_key_here

# ========== META WHATSAPP (OPTIONAL) ==========
# Get from Meta Developer Portal
META_WHATSAPP_TOKEN=your_meta_token_here
META_WHATSAPP_PHONE_ID=your_phone_id_here

# ========== ENVIRONMENT ==========
# Set to true for production builds
PRODUCTION=false
